<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>



<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id = "root2" styleClass="border" fx:controller = "MyController">

    <left>
        <VBox fx:id="leftVBox" alignment="CENTER" spacing="10">
            <Label text="ANTE"/>
            <TextField fx:id="anteBetTextField1" promptText="Enter your bet"/>

            <Label text="PAIR PLUS"/>
            <TextField fx:id="pairPlusTextField1" promptText="Enter your bet"/>

            <Button text="PLAY" onAction="#playButtonPlayer1"/>
            <Button text="FOLD" onAction="#foldButtonPlayer1"/>
            <Button text="READY" onAction="#readyButtonPlayer1"/>
        </VBox>
    </left>

    <center>
        <VBox fx:id="centerVBox" alignment="CENTER" spacing="10">
            <Label text="DEALER"/>
            <HBox alignment="CENTER" spacing="10">
                <ImageView fx:id="dealerCard1Image" fitWidth="75" fitHeight="100"/>
                <ImageView fx:id="dealerCard2Image" fitWidth="75" fitHeight="100"/>
                <ImageView fx:id="dealerCard3Image" fitWidth="75" fitHeight="100"/>
            </HBox>

            <HBox alignment="CENTER" spacing="100">
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Player 1"/>
                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fx:id="player1Card1Image" fitWidth="75" fitHeight="100"/>
                        <ImageView fx:id="player1Card2Image" fitWidth="75" fitHeight="100"/>
                        <ImageView fx:id="player1Card3Image" fitWidth="75" fitHeight="100"/>
                    </HBox>
                    <TextField fx:id="outputTextFieldPlayer1" promptText="Output" disable="true" styleClass="output"/>
                    <TextField fx:id="winningsTextFieldPlayer1" promptText="Winnings" disable="true" styleClass="output"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10">
                    <Label text="Player 2"/>
                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fx:id="player2Card1Image" fitWidth="75" fitHeight="100"/>
                        <ImageView fx:id="player2Card2Image" fitWidth="75" fitHeight="100"/>
                        <ImageView fx:id="player2Card3Image" fitWidth="75" fitHeight="100"/>
                    </HBox>
                    <TextField fx:id="outputTextFieldPlayer2" promptText="Output" disable="true" styleClass="output"/>
                    <TextField fx:id="winningsTextFieldPlayer2" promptText="Winnings" disable="true" styleClass="output"/>
                </VBox>
            </HBox>

        </VBox>
    </center>

    <right>
        <VBox fx:id="rightVBox" alignment="CENTER" spacing="10">
            <Label text="ANTE"/>
            <TextField fx:id="anteBetTextField2" promptText="Enter your bet"/>

            <Label text="PAIR PLUS"/>
            <TextField fx:id="pairPlusTextField2" promptText="Enter your bet"/>

            <Button text="PLAY" onAction="#playButtonPlayer2"/>
            <Button text="FOLD" onAction="#foldButtonPlayer2"/>
            <Button text="READY" onAction="#readyButtonPlayer2"/>
        </VBox>
    </right>

    <bottom>
        <Button text="Options" onAction="#optionButton"/>
    </bottom>

</BorderPane>

